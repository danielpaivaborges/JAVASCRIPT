<%- include('./partials/header.ejs')%>
<body>
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <h1 class="text-white text-center">PERGUNTAR</h1>
        <div class="card">
            <div class="card-header"><h3>Elabore a sua pergunta</h3></div>
            <div class="card-body">
                <form action="/salvarpergunta" method="POST">
                    <label class="lead" for="titulo">Titulo</label>
                    <input class="form-control mb-2" type="text" name="titulo" id="titulo" placeholder="Digite o titulo da sua pergunta">
                    <label class="lead" for="descricao">Descrição da pergunta</label>
                    <textarea class="form-control" name="descricao" id="descricao" placeholder="Descreva a sua pergunta"></textarea>
                    <hr>
                    <button class="btn btn-primary">Enviar Pergunta</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('./partials/footer.ejs')%>