<%- include('./partials/header.ejs')%>

    <body>
        <%- include('./partials/navbar.ejs')%>
        <div class="container">
            <div class="card my-3">
                <div class="text-center card-header">
                    <h2>Perguntas</h2>
                </div>
                <div class="card-footer text-center">
                    <a href="/perguntar"><button class="text-center btn btn-primary">Perguntar</button></a>
                </div>
            </div>
            <%perguntas.forEach((pergunta)=>{%>
                <div class="card my-3">
                    <div class="card-header">
                        <h4><%=pergunta.titulo%></h4>
                    </div>
                    <div class="card-body">
                        <%=pergunta.descricao%>
                    </div>
                    <div class="card-footer">
                        <a href="/pergunta/<%=pergunta.id%>"><button class="btn btn-primary">Responder <span class="badge bg-warning text-dark">
                            <%=respostas.filter((resposta)=> resposta.idPergunta == pergunta.id).length%>
                        </span></button></a>
                    </div>
                </div>
                <%})%>
        </div>
    </body>

    <%- include('./partials/footer.ejs')%>