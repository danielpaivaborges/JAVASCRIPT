    <body>
        <%- include('./partials/navbar.ejs')%>
        <div class="container">
            <div class="card my-3">
                <div class="card-header">
                    <h3 class="my-3 text-center">Perguntar</h3>
                </div>
                <div class="card-body">
                    <form action="/salvarpergunta" method="POST">
                        <label for="titulo">Título da Pergunta</label>
                        <input class="form-control my-2" type="text" name="titulo" id="titulo"
                            placeholder="Digite o título da sua pergunta">
                        <label for="descricao">Descrição da Pergunta</label>
                        <textarea class="form-control" name="descricao" id="descricao"
                            placeholder="Descreva sua pergunta"></textarea>
                        <button class="btn btn-primary my-3">Enviar Pergunta</button>
                    </form>
                </div>
            </div>
        </div>
    </body>

